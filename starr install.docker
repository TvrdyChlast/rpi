services:
  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest
    container_name: prowlarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/London
    volumes:
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Docker/prowlarr/data:/config
    ports:
      - 9696:9696
    restart: unless-stopped
  flaresolverr:
    # DockerHub mirror flaresolverr/flaresolverr:latest
    image: ghcr.io/flaresolverr/flaresolverr:latest
    container_name: flaresolverr
    environment:
      - LOG_LEVEL=info
      - LOG_HTML=false
      - CAPTCHA_SOLVER=none
      - TZ=Europe/London
    ports:
      - "8191:8191"
    restart: unless-stopped 
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/London
    volumes:
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Docker/radarr/data:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/media/filmy:/movies #optional
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/downloads:/downloads #optional
    ports:
      - 7878:7878
    restart: unless-stopped
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/London
    volumes:
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Docker/sonarr/data:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/media/serialy:/tv #optional
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/downloads:/downloads #optional
    ports:
      - 8989:8989
    restart: unless-stopped
  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=0
      - PGID=0
      - TZ=Etc/UTC
    volumes:
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Docker/bazarr/config:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/media/filmy:/movies #optional
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/media/serialy:/tv #optional
    ports:
      - 6767:6767
    restart: unless-stopped
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/London
      - WEBUI_PORT=8888
      - TORRENTING_PORT=6881
    volumes:
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Docker/qbittorrent/appdata:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/downloads:/downloads #optional
    ports:
      - 8888:8888
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped
