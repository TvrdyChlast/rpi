services:
  radarr:
    container_name: radarr
    image: ghcr.io/hotio/radarr:latest
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 7878:7878
    environment:
      - PUID=1000
      - PGID=100
      - TZ=Europe/London
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/appdata/radarr:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Download/download:/data
  sonarr:
    container_name: sonarr
    image: ghcr.io/hotio/sonarr:latest
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 8989:8989
    environment:
      - PUID=1000
      - PGID=100
      - TZ=Europe/London
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/appdata/sonarr:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Download/download:/data
  bazarr:
    container_name: lidarr
    image: ghcr.io/hotio/lidarr
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 8686:8686
    environment:
      - PUID=1000
      - PGID=100
      - TZ=Europe/London
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/appdata/lidarr:/config
      - /srv/dev-disk-by-uuid-70273d8a-f07f-4a7f-bd9d-5acade50245c/Download/download/media:/data/media
